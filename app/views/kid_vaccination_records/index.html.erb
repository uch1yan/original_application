<h1>予防接種の記録</h1>

<table>
  <thead>
    <tr>    
      <th><%= sort_link(@q, :kid_name, "子供の名前") %></th>
      <th><%= sort_link(@q, :name, "ワクチン名") %></th>
      <th><%= sort_link(@q, :count, "回数") %></th>
      <th><%= sort_link(@q, :inplemented_date, "接種日") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @kid_vaccination_records.each do |kid_vaccine| %>
      <tr>
        <td><%= Kid.find(kid_vaccine.kid_id).kid_name %></td>
        <td><%= VaccinationRecord.find(kid_vaccine.vaccination_record_id).name %></td>
        <td><%= kid_vaccine.count %></td>
        <td><%= kid_vaccine.inplemented_date %></td>
        <td><%= link_to '編集', edit_vaccination_record_path(kid_vaccine) %></td>
        <td><%= link_to '詳細', vaccination_record_path(kid_vaccine.id) %></td>
        <td><%= link_to '削除', kid_vaccine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録する', new_kid_vaccination_record_path %> 
