<div class="user_info">
  <h1><%= t('.memo') %></h1>

  <table>
    <thead>
      <tr>
        <th><%= t('.date') %></th>
        <th><%= t('.content') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <% if post.user.families.first.id == current_user.families.first.id %>
        <tr>
          <td><%= post.date.strftime("%Y-%m-%d")  %></td>
          <td><%= post.content %></td>
          <td><%= link_to t('.edit'), edit_post_path(post) %></td>
          <td><%= link_to t('.delete'), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('.register_memo'), new_post_path, class: "login" %>
</div>