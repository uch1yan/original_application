<h1>メモ</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.user.families.first.id == current_user.families.first.id %>
      <tr>
        <td><%= post.date.strftime("%Y-%m-%d")  %></td>
        <td><%= post.content %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'メモを登録する', new_post_path %>
