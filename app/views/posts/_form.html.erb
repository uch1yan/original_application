<div class="user_info">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :date %>
      <%= form.datetime_select :date %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_field :content, placeholder: "保育園に電話する" %>
    </div>

    <div class="actions">
      <%= form.submit "登録", class: "post" %>
    </div>
  <% end %>
  <div class="back"><%= link_to t('.back'), posts_path %></div>
</div>