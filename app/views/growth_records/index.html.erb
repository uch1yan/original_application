<h1>成長記録</h1>

<% @kids.each do |kid| %>
  <%= line_chart [ { name: '身長', data: @growth_data.where(kid: kid).map { |record| record.slice(:date, :height).values } } ] %>
  <%= line_chart [ { name: '体重', data: @growth_data.where(kid: kid).map { |record| record.slice(:date, :weight).values } } ] %>
  <%# end %>
<% end %>

<%= link_to '成長記録の詳細を閲覧する', growth_record_path(@growth_records) %> 

