<p id="notice"><%= notice %></p>

<h1>Growth Records</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @growth_records.each do |growth_record| %>
      <tr>
        <td><%= growth_record.date %></td>
        <td><%= growth_record.height %></td>
        <td><%= growth_record.weight %></td>
        <td><%= link_to 'Show', growth_record %></td>
        <td><%= link_to 'Edit', edit_growth_record_path(growth_record) %></td>
        <td><%= link_to 'Destroy', growth_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

