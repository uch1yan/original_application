<div class="user_info">
  <div class="side-box">
    <h2><%= t('.detail') %></h2>

    <table class="text-center">
      <thead>
        <tr>
          <th><%= t('.kid') %></th>
          <th><%= t('.date') %></th>
          <th><%= t('.height') %></th>
          <th><%= t('.weight') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @growth_records.each do |growth_record| %>
          <% if growth_record.kid.family.id == current_user.families.first.id %>   
          <tr>
            <td><%= growth_record.kid.kid_name %></td>
            <td><%= growth_record.date %></td>
            <td><%= growth_record.height %></td>
            <td><%= growth_record.weight %></td>
            <td><%= link_to t('.edit'), edit_growth_record_path(growth_record) %> /</td>
            <td><%= link_to t('.delete'), growth_record_path(growth_record), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to t('.back'), growth_records_path, class: "button" %>
    <%= link_to t('.register_records'), new_growth_record_path, class: "button" %>
  </div>
</div>
