<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <p><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></p>
          <p><%= comment.content %></p>
          <p><%= link_to "コメント編集", edit_daily_condition_comment_path(daily_condition, comment), remote: true %></p>
          <p><%= link_to "コメント削除", daily_condition_comment_path(comment.daily_condition_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>