<ul>
<div class="wrapper">
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
    <ul>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <p><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>  /
          <%= comment.content %>
          <%= link_to "編集", edit_daily_condition_comment_path(daily_condition, comment), remote: true %><i class="fa-solid fa-pen"></i>
          <%= link_to "削除", daily_condition_comment_path(comment.daily_condition_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %><i class="fa-solid fa-trash"></i></p>
      </li>
    </ul>
    <% end %>
  <% end %>
</div>