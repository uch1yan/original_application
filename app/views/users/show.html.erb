<p>
  <strong><%= t('.user_name') %></strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= t('.admin') %></strong>
  <%= @user.admin %>
</p>

<% if current_user.families.first.present? %>
<p>
  <strong><%= t('.family') %></strong>
  <%= current_user.families.first.name %>
</p>
<% else %>
  <%= link_to t('.register_family'), new_family_path%><br>
<% end %>

<%= link_to t('.edit'), edit_user_path(@user) %> 
<%= link_to t('.register_my_kids'), new_kid_path %> 
<%= link_to t('.invite_family'), new_user_invitation_path %>
