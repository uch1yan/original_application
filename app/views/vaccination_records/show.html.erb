  <h1>予防接種詳細ページ</h1>
  <div class="text-center"> 

  <p><strong>ワクチン名：</strong> <%= @vaccine.name %></p>
  <p><strong>接種回数：</strong> <%= @vaccine.count %> 
      (<%= @vaccine.expected_date %>) 
  <% if @check.present? %>
    <%= link_to check_path(id: @check.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to checks_path(vaccine_id: @vaccine.id), method: :post do %>
      <i class="fa-solid fa-circle-check"></i>
    <% end %>
  <% end %>
