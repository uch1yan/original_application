  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.text_area :avatar %>
  </div>

  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
