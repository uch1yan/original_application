  <%= form_with(model: family) do |form| %>
    <% if family.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% family.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "田中" %>
    </div>
    
    <div class="actions">
      <%= form.submit t('.register'), class: "login" %>
    </div>
  <% end %>
